<%- include('../partials/header-partial-bg.ejs') %>
<!-- included font awesome for the checkmark and times icons. I put them here to represent the meeting/non-meeting of the password requirements -->
<!-- The icons can be changed by changing class with another from the font awesome website. -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
    integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
    crossorigin="anonymous" />
<!-- css file for this page in case we need page specific styling -->
<link rel="stylesheet" href="/css/password-requirements.css">
<h1>Register</h1>
<% if (messages.error) { %>
<%= messages.error %>
<% } %>
<form action="/users/register" method="POST">
    <div>
        <label for="username">Username</label>
        <input type="username" name="username" id="username" required />
    </div>
    <div>
        <label for="password">Password</label>
        <input type="password" name="password" id="password" required />
        <div class="password_requirements_container">
            <p class="password_requirements_header">Password requires all of the following:</p>
            <ul class="password_requirements_list">
                <li id="pw_req_min_length"><i class="far fa-circle"></i>Minimum length of 8</li>
                <li id="pw_req_max_length"><i class="far fa-circle"></i>Maximum length of 32</li>
                <li id="pw_req_lowercase"><i class="far fa-circle"></i>At least 1 lowercase letter</li>
                <li id="pw_req_uppercase"><i class="far fa-circle"></i>At least 1 uppercase letter</li>
                <li id="pw_req_number"><i class="far fa-circle"></i>At least 1 number</li>
                <li id="pw_req_notUsername"><i class="far fa-circle"></i>Different than username</li>
                <li id="pw_req_notAscendDescend"><i class="far fa-circle"></i>No ascending or descending numbers or
                    letters</li>
            </ul>
        </div>
    </div>
    <button class="button btn" id="register" type="submit">Register</button>
</form>
<a href="/users/login">Login</a>

<script src="/scripts/password_requirements.js"></script>

<%- include('../partials/footer.ejs') %>